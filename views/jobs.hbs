<div class="container">
  <div class="row">
    <section class="col-md-8">
      {{#each jobs as |job|}}
      <a class="view" href="/jobs/view/{{job._id}}">
          <article class="row job">
            <div class="">
              <div class="col-md-6">
                <div><b class="job-title">{{job.textfield_27716413}}</b></div>
                <div>
                  <span class="light-gray">at </span>
                  <b class="sub-title">{{job.textfield_27716477}}</b>
                  <span class="light-gray"> in </span>
                  <b class="sub-title">{{job.textfield_27716361}}</b>
                </div>
              </div>
              <div class="col-md-6">
                <h4 >
                  <span class="badge asp-violet badge-radio thin">{{job.list_27717784_choice}}</span>
                  <span class="badge asp-violet badge-radio thin">

                  {{#ifeq job.list_27718927_choice 'Remote'}}
                    <i class="fa fa-wifi thin"></i>
                  {{else}}
                    <i class="fa fa-briefcase thin"></i>
                  {{/ifeq}}
                  {{job.list_27718927_choice}}</span>
                  <div class="pull-right thin">
                    {{#humanize job.metadata.date_submit}}
                    {{/humanize}}
                  </div>
                   </h4>
              </div>
            </div>
          </article>
      </a>
      {{/each}}
    </section>
    <section class="col-md-4">

    </section>
  </div>
</div>
