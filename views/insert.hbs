<body>


  <div class="container auth">
    <div id="big-form" class="auth-box">
      <form>
        <fieldset>


          <!-- Text input-->
          <div class="form-group">
            <div class="">
              <input id="job_title" name="job_title" placeholder="Job Title" class="form-control input-md" type="text">
            </div>
          </div>

          <!-- Select Basic -->
          <div class="form-group row">
            <label for="fun" class="col-sm-4 col-md-4 control-label">Job Type</label>
            
            <div class="col-sm-12 col-md-12">
              <div class="input-group">
                <div id="radioBtn" class="btn-group">
                  <a name="job_type" class="btn btn-primary btn-sm active" data-toggle="fun" data-title="a">Full-time</a>
                  <a name="job_type" class="btn btn-primary btn-sm notActive" data-toggle="fun" data-title="b">Part-time</a>
                  <a name="job_type" class="btn btn-primary btn-sm notActive" data-toggle="fun" data-title="c">Contract</a>
                  <a name="job_type" class="btn btn-primary btn-sm notActive" data-toggle="fun" data-title="d">Freelance</a>
                </div>
                <input type="hidden" name="fun" id="fun">
              </div>
            </div>
          </div>

          <div class="form-group row">
            <label for="fun" class="col-sm-4 col-md-4 control-label">Location Type</label>
            <div class="col-sm-12 col-md-12">
              <div class="input-group">
                <div id="radioBtn" class="btn-group">
                  <a name="location_type" class="btn btn-primary btn-sm active" data-toggle="location" data-title="e">Remote</a>
                  <a name="location_type" class="btn btn-primary btn-sm notActive" data-toggle="location" data-title="f">OnSite</a>
                </div>
                <input type="hidden" name="fun" id="fun">
              </div>
            </div>
          </div>

          <div class="form-group">
            <label class=" control-label" for="textarea">Job Description</label>
            <div class="">                     
              <textarea class="form-control" id="textarea" name="textarea"></textarea>
            </div>
          </div>

        </fieldset>
      </form>
    </div>
    <div class="clearfix"></div>
  </div>
